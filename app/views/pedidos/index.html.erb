<h1>Pedidos</h1>

<table class= "table .table-responsive">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Data</th>
      <th>Valor total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.cliente.nm_cliente %></td>
        <td><%= pedido.dt_pedido %></td>
        <td><%= pedido.vl_total %></td>
        <td><%= link_to 'Exibir', pedido %></td>
        <td><%= link_to 'Remover', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Pedido', new_pedido_path %>
